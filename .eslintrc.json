{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "use": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "class-methods-use-this": "off",
        "no-multiple-empty-lines": "error",
        "allowMultiplePropertiesPerLine": true,
        "object-curly-newline": "off",
        "no-param-reassign": "off",
        "no-throw-literal": "off"
    }
}